@* _IdentityPartial.cshtml *@

@if (User.Identity?.IsAuthenticated == true)
{
    <div class="relative group">
        <a href="/Identity/Account/Manage"><span class="hover:underline cursor-pointer">Manage</span></a>
        <div class="absolute top-full left-0 hidden group-hover:block bg-white text-sm text-gray-800 rounded shadow-md z-50 min-w-[160px] pt-1">
            <a href="/Identity/Account/Manage" class="block px-4 py-2 hover:bg-gray-100">Profile</a>
            <a href="/Identity/Account/Manage/ChangePassword" class="block px-4 py-2 hover:bg-gray-100">Change Password</a>
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" method="post" class="block">
                @Html.AntiForgeryToken()
                <button type="submit" class="w-full text-left px-4 py-2 hover:bg-gray-100 cursor-pointer">Logout</button>
            </form>
        </div>
    </div>
}
else
{
    <a href="/Identity/Account/Login" class="hover:underline">Login</a>
}