@model Subspace.Shared.Models.Tag
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Add New Tag</h1>

<form asp-action="Create" method="post" class="space-y-4 bg-white dark:bg-gray-900 p-6 shadow rounded">
    <div>
        <label asp-for="Name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Name</label>
        <input asp-for="Name" class="mt-1 block w-full border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 rounded-md shadow-sm px-3 py-2 focus:outline-none focus:ring-1 focus:ring-blue-500" />
        <span asp-validation-for="Name" class="text-red-500 dark:text-red-400 text-sm"></span>
    </div>

    <div class="flex space-x-4">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition-colors duration-200">
            Save
        </button>
        <a asp-area="Admin" asp-controller="Tags" asp-action="Index"
           class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-700 text-gray-700 dark:text-gray-200 text-sm font-medium rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-200">
            Cancel and go back
        </a>
    </div>
</form>