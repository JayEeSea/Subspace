@model Subspace.Shared.Models.Series

@{
    ViewData["Title"] = "Delete Series";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-6 bg-white dark:bg-gray-900 shadow rounded">
    <h1 class="text-2xl font-bold mb-4 text-red-600 dark:text-red-400">Delete Series</h1>

    <p class="mb-4 text-gray-700 dark:text-gray-300">
        Are you sure you want to delete the following series?
    </p>

    <dl class="mb-4">
        <dt class="font-medium text-gray-700 dark:text-gray-300">Name:</dt>
        <dd class="mb-2 text-gray-900 dark:text-gray-100">@Model.Name</dd>

        <dt class="font-medium text-gray-700 dark:text-gray-300">Abbreviation:</dt>
        <dd class="mb-2 text-gray-900 dark:text-gray-100">@Model.Abbreviation</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="flex space-x-2">
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded transition-colors duration-200">
                Delete
            </button>
            <a asp-area="Admin" asp-controller="Series" asp-action="Index"
               class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-700 text-gray-700 dark:text-gray-200 text-sm font-medium rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-200">
                Cancel and go back
            </a>
        </div>
    </form>
</div>