@model IEnumerable<Subspace.Shared.Models.Series>

@{
    ViewData["Title"] = "Series List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-6 bg-white dark:bg-gray-900 shadow rounded">
    <div class="mb-4">
        <div class="flex justify-between items-center">
            <a asp-area="" asp-controller="Admin" asp-action="Index"
               class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-700 text-gray-700 dark:text-gray-200 text-sm font-medium rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-200">
                ← Back to Admin Dashboard
            </a>
        </div>
    </div>

    <h1 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Manage Series</h1>

    <a asp-action="Create" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded mb-4 transition-colors duration-200">
        + Add New Series
    </a>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700 text-sm">
            <thead class="bg-gray-100 dark:bg-gray-800">
                <tr>
                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">ID</th>
                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">Name</th>
                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">Abbreviation</th>
                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-900 divide-y divide-gray-100 dark:divide-gray-700">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors duration-200">
                        <td class="px-4 py-2 text-gray-900 dark:text-gray-100">@item.Id</td>
                        <td class="px-4 py-2 text-gray-900 dark:text-gray-100">@item.Name</td>
                        <td class="px-4 py-2 text-gray-900 dark:text-gray-100">@item.Abbreviation</td>
                        <td class="px-4 py-2 space-x-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-600 dark:text-blue-400 hover:underline transition-colors duration-200">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 dark:text-red-400 hover:underline transition-colors duration-200">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>