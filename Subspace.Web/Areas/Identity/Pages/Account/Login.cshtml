@page
@model LoginModel

<div class="flex justify-center">
    <div class="w-full max-w-md">
        <section>
            <form id="account" method="post" class="flex flex-col space-y-6 bg-white dark:bg-gray-900 shadow-md rounded-lg p-8">
                <h2 class="text-2xl font-bold text-center text-gray-800 dark:text-white mb-6">Welcome Back</h2>

                <div>
                    <label asp-for="Input.Email" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Email</label>
                    <input asp-for="Input.Email" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="Input.Email" class="text-red-500 dark:text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Password</label>
                    <input asp-for="Input.Password" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="Input.Password" class="text-red-500 dark:text-red-400 text-sm"></span>
                </div>

                <div class="flex flex-col items-center space-y-2">
                    <div class="flex items-center">
                        <input asp-for="Input.RememberMe" class="mr-2 bg-white dark:bg-gray-800 border-gray-300 dark:border-gray-700 text-gray-900 dark:text-gray-100 focus:ring-blue-500" />
                        <label asp-for="Input.RememberMe" class="text-sm text-gray-700 dark:text-gray-300">Remember me?</label>
                    </div>
                    <a asp-page="./ForgotPassword" class="text-sm text-blue-500 dark:text-blue-400 hover:underline text-center">
                        Forgot your password?
                    </a>
                </div>

                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-md transition-colors duration-200">
                    Log in
                </button>

            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}