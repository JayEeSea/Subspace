@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set Password";
}

<section class="flex-grow flex flex-col w-full max-w-2xl mx-auto p-6 bg-white dark:bg-gray-900 shadow rounded-lg">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-900 dark:text-white">@ViewData["Title"]</h2>

    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6 space-y-8">
        <div class="text-center">
            <p class="text-gray-700 dark:text-gray-300 mb-4">
                You do not have a password set for this account. Set a new password below.
            </p>
        </div>

        <form method="post" class="space-y-6">
            <div>
                <label asp-for="Input.NewPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                <input asp-for="Input.NewPassword" class="mt-1 block w-full rounded-md border border-gray-300 dark:border-gray-700 shadow-sm bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 px-3 py-2 text-sm" />
                <span asp-validation-for="Input.NewPassword" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                <input asp-for="Input.ConfirmPassword" class="mt-1 block w-full rounded-md border border-gray-300 dark:border-gray-700 shadow-sm bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 px-3 py-2 text-sm" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-colors duration-200">
                    Set Password
                </button>
            </div>
        </form>
    </div>
</section>