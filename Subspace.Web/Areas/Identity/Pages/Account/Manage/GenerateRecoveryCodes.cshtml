@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "Generate Recovery Codes";
}

<section class="flex-grow flex flex-col w-full max-w-2xl mx-auto p-6 bg-white dark:bg-gray-900 shadow rounded-lg">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-900 dark:text-white">@ViewData["Title"]</h2>

    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6 space-y-8">
        <div class="text-center">
            <p class="text-gray-700 dark:text-gray-300 mb-4">
                You can generate a new set of recovery codes for use when your authenticator device is unavailable.
            </p>
            <form method="post">
                <button type="submit" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-colors duration-200">
                    Generate Recovery Codes
                </button>
            </form>
        </div>

        @if (Model.RecoveryCodes != null && Model.RecoveryCodes.Length > 0)
        {
            <div class="mt-8">
                <h3 class="text-lg font-semibold mb-4 text-center text-green-700 dark:text-green-400">Your new recovery codes:</h3>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    @foreach (var code in Model.RecoveryCodes)
                    {
                        <div class="bg-gray-100 dark:bg-gray-700 text-center py-3 rounded-lg font-mono tracking-wide text-gray-800 dark:text-gray-100">
                            @code
                        </div>
                    }
                </div>

                <div class="mt-6 text-center">
                    <p class="text-red-600 dark:text-red-400 font-semibold">
                        Please save these codes securely. You will not be able to view them again!
                    </p>
                </div>
            </div>
        }
    </div>
</section>