@model string

@if (!string.IsNullOrEmpty(Model))
{
    var statusClass = "bg-blue-100 text-blue-800 border border-blue-300";
    var icon = "✅";

    if (Model.Contains("error", StringComparison.OrdinalIgnoreCase) || Model.Contains("failed", StringComparison.OrdinalIgnoreCase))
    {
        statusClass = "bg-red-100 text-red-800 border border-red-300";
        icon = "❌";
    }
    else if (Model.Contains("success", StringComparison.OrdinalIgnoreCase) || Model.Contains("updated", StringComparison.OrdinalIgnoreCase))
    {
        statusClass = "bg-green-100 text-green-800 border border-green-300";
        icon = "✅";
    }
    else if (Model.Contains("warning", StringComparison.OrdinalIgnoreCase) || Model.Contains("require", StringComparison.OrdinalIgnoreCase))
    {
        statusClass = "bg-yellow-100 text-yellow-800 border border-yellow-300";
        icon = "⚠️";
    }

    <div class="flex items-start gap-2 p-4 mb-6 rounded shadow-sm @statusClass">
        <div class="text-lg">@icon</div>
        <div class="text-sm font-medium">@Model</div>
    </div>
}